{
  "schema": {
    "weather": {
      "type": "object",
      "title": "properties for weather",
      "properties": {
        "module": {
          "type": "string",
          "title": "module",
          "default": "weather",
          "readonly": true
        },
        "disabled": {
          "type": "boolean",
          "title": "disabled",
          "default": false
        },
        "position": {
          "type": "string",
          "title": "module position",
          "readonly": "true"
        },
        "classes": {
          "type": "string",
          "title": "classes",
          "default": ""
        },
        "order": {
          "type": "string",
          "title": "order",
          "default": "*"
        },
        "inconfig": {
          "type": "string",
          "title": "inconfig",
          "default": "0"
        },
        "index": {
          "type": "integer"
        },
        "config": {
          "type": "object",
          "title": "config",
          "properties": {
            "weatherProvider": {
              "type": "string",
              "enum":[
                 "darksky",
                 "envcanada",
                 "openweathermap",
                 "smhi",
                 "ukmetofficedatahub",
                 "ukmetoffice",
                 "weatherbit",
                 "weathergov"
              ]
            },
            "apiBase": {
              "type":"string"              
            },
            "apiVersion": {
              "type":"string",
              "default":"2.5"
            },
            "weatherEndpoint" :{
              "type": "string"
            },
            "apiKey": {
              "type":"string",
              "default":""
            },
            "apiSecret": {
              "type":"string",
              "default":""
            },
            "lat": {
              "type": "number",
              "default":0
            },
            "lon": {
              "type": "number",
              "default":0
            },
            "siteCode": {
              "type":"string",
              "default":"s1234567"
            },
            "provCode": {
              "type":"string",
              "default":"ON"
            },
            "locationID": {
              "type":"string",
              "default":""
            },
            "location": {
              "type":"string",
              "default":""
            },
            "precipitationValue": {
              "type":"string",
              "default":"pmedian"
            },
            "windUnits": {
              "type":"string",
              "enum":[
                "mph",
                "kph"
              ]
            },
            "roundTemp": {
              "type": "boolean"
            },
            "type": {
              "type": "string",
              "enum":[
                "current",
                "forecast",
                "daily",
                "hourly"
              ]
            },
            "units": {
              "type": "string"
            },
            "useKmh": {
              "type": "boolean"
            },
            "tempUnits": {
              "type": "string"
            },
            "updateInterval": {
              "type": "integer"
            },
            "animationSpeed": {
              "type": "integer"
            },
            "timeFormat": {
              "type": "integer"
            },
            "showPeriod": {
              "type": "boolean"
            },
            "showPeriodUpper": {
              "type": "boolean"
            },
            "showWindDirection": {
              "type": "boolean"
            },
            "showWindDirectionAsArrow": {
              "type": "boolean"
            },
            "useBeaufort": {
              "type": "boolean"
            },
            "lang": {
              "type": "string"
            },
            "showHumidity": {
              "type": "boolean"
            },
            "showSun": {
              "type": "boolean"
            },
            "degreeLabel": {
              "type": "string"
            },
            "decimalSymbol": {
              "type": "string"
            },
            "showIndoorTemperature": {
              "type": "boolean"
            },
            "showIndoorHumidity": {
              "type": "boolean"
            },
            "maxNumberOfDays": {
              "type": "integer"
            },
            "maxEntries": {
              "type": "integer"
            },
            "fade": {
              "type": "boolean"
            },
            "fadePoint": {
              "type": "integer"
            },
            "initialLoadDelay": {
              "type": "integer"
            },
            "appendLocationNameToHeader": {
              "type": "boolean"
            },
            "calendarClass": {
              "type": "string"
            },
            "tableClass": {
              "type": "string"
            },
            "onlyTemp": {
              "type": "boolean"
            },
            "showPrecipitationAmount": {
              "type": "boolean"
            },
            "colored": {
              "type": "boolean"
            },
            "showFeelsLike": {
              "type": "boolean"
            }
          }
        }
      }
    }
  },
